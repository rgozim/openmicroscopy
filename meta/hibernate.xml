<!--

	Configuration for a dynamic Hibernate SessionFactory
 
-->

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>	

	<bean id="placeholderConfig"
      class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
		<list>
			<value>spring.properties</value>
		</list>
		</property>
	</bean>
	
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
	    <property name="driverClassName"><value>${database.driver}</value></property>
    	<property name="url"><value>${database.url}-meta</value></property>
	    <property name="username"><value>${database.username}</value></property>
	    <property name="password"><value>${database.password}</value></property>
	</bean>
	
       <bean id="sessionFactory" class="org.openmicroscopy.omero.logic.OmeroSessionFactoryBean">
	       <property name="cachedMappingResources">
<!-- Originally: TODO switch to Spring version!
	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <property name="mappingResources">  
-->
           <list>
	       		<value>ome/model/Dataset.hbm.xml</value>
				<value>ome/model/Image.hbm.xml</value>
				<value>ome/model/ImageDatasetLink.hbm.xml</value>			   
			</list>
       </property>
<!-- TODO doesn't use cache!
		          <property name="mappingDirectoryLocations">
		   <list>
			   <value>org/openmicroscopy/omero/model/</value>
		   </list>
	   </property>		   -->
       <property name="hibernateProperties">
           <props>
              <prop key="hibernate.dialect">${database.dialect}</prop>
	       	  <prop key="hibernate.show_sql">${database.show_sql}</prop>
			  <prop key="hibernate.cglib.use_reflection_optimizer">false</prop>
           </props>
       </property>
       <property name="dataSource">
           <ref bean="dataSource"/>
       </property>
   </bean>
</beans>
