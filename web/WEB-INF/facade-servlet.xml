<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

   <bean id="handlerMapping" class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping"/>
		
   <!-- Configurer that sets up a shared VelocityEngine for Velocity views -->
   <bean id="velocityConfigurer" class="org.springframework.web.servlet.view.velocity.VelocityConfigurer">
       <property name="resourceLoaderPath"><value>WEB-INF/views/</value></property>
   </bean>
   <bean id="viewResolver" class="org.springframework.web.servlet.view.velocity.VelocityViewResolver">
	   <property name="suffix">
	     <value>.vm</value>
	   </property>
   </bean>

	<!--fileViewController"-->
    <bean name="/index.html" 
		class="org.springframework.web.servlet.mvc.UrlFilenameViewController"/>	
	
	<!-- SERVICES -->
	
	<bean name="/HierarchyBrowsing" class="org.springframework.remoting.caucho.HessianServiceExporter">
	    <property name="service"><ref bean="hierarchyBrowsingService"/></property> 
	    <property name="serviceInterface"><value>ome.api.HierarchyBrowsing</value></property>
	</bean>

	<bean name="/Pojos" class="org.springframework.remoting.caucho.HessianServiceExporter">
	    <property name="service"><ref bean="pojosService"/></property> 
	    <property name="serviceInterface"><value>ome.api.Pojos</value></property>
	</bean>
		
	<bean name="/Write" class="org.springframework.remoting.caucho.HessianServiceExporter">
	    <property name="service"><ref bean="writeService"/></property> 
	    <property name="serviceInterface"><value>ome.api.Write</value></property>
	</bean>

	<!-- FACADES -->
	
	<bean name="/PrimitiveHierarchyBrowsing" class="org.springframework.remoting.caucho.HessianServiceExporter">
	    <property name="service"><ref bean="primitiveHierarchyBrowsingFacade"/></property> 
	    <property name="serviceInterface"><value>ome.api.PrimitiveHierarchyBrowsing</value></property>
	</bean>

		
</beans>