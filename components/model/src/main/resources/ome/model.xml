<!--

    Configuration for the model/ ApplicationContext (not OmeroContext)
    Primarily defines a map which other components can add to define 
    bridges, validators and other components need within the model.

-->


<beans>

    <!-- A map used by server configuration files to inject
    object via ome.util.MapPut -->
    <bean id="bridges" class="java.util.HashMap"/>

</beans>
