<ivy-module version="1.0">
  <info
      organisation="omero"
      module="server"
      status="integration"/>
  <configurations>
    <conf name="build"/>
    <conf name="server"/>
  </configurations>
  <publications>
    <artifact name="server" type="jar"/>
  </publications>
  <dependencies defaultconfmapping="build,server->default">
    <!-- Internal -->
    <dependency name="common" rev="${omero.version}" changing="true" conf="build->build;server->server"/>
    <dependency name="importer" rev="${omero.version}" changing="true" conf="build->build;server->server"/>
    <dependency name="importer-common" rev="${omero.version}" changing="true" conf="build->build;server->server"/>
    <dependency name="romio" rev="${omero.version}" changing="true" conf="build->build;server->server"/>
    <dependency name="rendering" rev="${omero.version}" changing="true" conf="build->build;server->server"/>
    <!-- Ice -->
    <dependency org="omero" name="ice" rev="${versions.ice}"/>
    <dependency org="omero" name="ice-db" rev="${versions.ice}"/>
    <!-- j2ee replacements : jta, jndi, etc. -->
    <dependency org="jbossts" name="jbossts" rev="4.5.0.GA"/>
    <dependency org="jbossts" name="jbossts-common" rev="4.5.0.GA"/>
    <dependency org="atomikos" name="atomikos-transactions-essentials" rev="3.4.3"/>
    <dependency org="geronimo-spec" name="geronimo-spec-jta" rev="1.0.1B-rc4"/>
    <dependency org="slf4j" name="slf4j-api" rev="1.4.3"/>
    <dependency org="slf4j" name="slf4j-log4j12" rev="1.4.3"/>
    <dependency org="tyrex" name="tyrex" rev="1.0.3"/>
    <!-- Public -->
    <dependency org="commons-lang" name="commons-lang" rev="2.1"/>
    <dependency org="activemq" name="activemq-core" rev="3.2"/>
    <dependency org="commons-beanutils" name="commons-beanutils" rev="1.7.0"/>
    <dependency org="commons-codec" name="commons-codec" rev="1.3"/>
    <dependency org="commons-dbcp" name="commons-dbcp" rev="1.2.1"/>
    <dependency org="commons-pool" name="commons-pool" rev="1.2"/>
    <dependency org="commons-io" name="commons-io" rev="${versions.commons-io}"/>
    <dependency org="eclipse" name="jdtcore" rev="3.1.0"/>
    <dependency org="net/sf/ehcache" name="ehcache" rev="${versions.ehcache}"/>
    <dependency org="net/sf/ehcache" name="jsr107cache" rev="1.0"/>
    <dependency org="backport-util-concurrent" name="backport-util-concurrent" rev="${versions.backport}"/>
    <dependency org="jamon" name="jamon" rev="${versions.jamon}"/>
    <dependency org="org/acegisecurity" name="acegi-security" rev="1.0.0-RC1"/>
    <dependency org="quartz" name="quartz" rev="1.5.2"/>
    <dependency org="xerces" name="xerces" rev="2.0.2"/>
    <dependency org="xml-apis" name="xml-apis" rev="${versions.xml-apis}"/>
    <dependency org="mail" name="mail" rev="1.4.1"/>
    <dependency org="activation" name="activation" rev="1.1.1"/>
    <dependency org="PDFBox" name="PDFBox" rev="0.7.3"/>
    <dependency org="FontBox" name="FontBox" rev="0.1.0"/>
    <dependency org="spring" name="spring-ldap" rev="1.2.1"/>
  </dependencies>
</ivy-module>
