<beans>	

  <bean singleton="false" parent="bean"
        id="internal:ome.api.RawFileStore" 
     class="ome.services.RawFileBean">
    <!--  
      Copied from id="binary" parent (no multiple inheritance). This is needed
      so long there isn't a wrapper instance around the RawFileStore as in
      service-omeis.providers.re.RenderingEngine.xml
    -->
    <property name="queryService" ref="internal:ome.api.IQuery"/>
    <property name="originalFilesService" ref="/OMERO/Files"/>
  </bean>

  <bean id="managed:ome.api.RawFileStore" parent="managedStatefulService">
    <property name="proxyInterfaces" value="ome.api.RawFileStore"/>
    <property name="target" ref="internal:ome.api.RawFileStore"/>
  </bean>
  
</beans>
