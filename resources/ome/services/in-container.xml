  <description>
    Configuration for in-container properties and general database access. 
    The beans in this configuration file should NOT be generally accessed. 
    In general, this entire file should be considered to have a "private" scope. 
  </description>

  <!--  Scope: private -->
  
  <bean id="methodSecurity" class="ome.security.basic.BasicMethodSecurity">
  	<constructor-arg value="false"/>
  </bean>

  <bean id="hibernateProperties" parent="hibernateProperties-defaults">
    <description>
    Scope: private
    </description>
    <property name="properties">
      <props merge="true">
        <prop key="hibernate.transaction.manager_lookup_class">
        org.hibernate.transaction.JBossTransactionManagerLookup
        </prop>
      </props>
    </property>
  </bean>  
  
  <bean id="transactionManager" lazy-init="true"
        class="org.springframework.transaction.jta.JtaTransactionManager">
    <description>
    Scope: private
    </description>
    <property name="userTransactionName" value="UserTransaction"/>
  </bean>

  <bean id="transactionHandler" 
        class="org.springframework.transaction.interceptor.TransactionInterceptor">
    <description>
    Scope: private
    </description>
    <property name="transactionManager" ref="transactionManager"/>
    <property name="transactionAttributeSource">
      <bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
    </property>
  </bean>

  <bean id="simpleJdbcTemplate" class="org.springframework.jdbc.core.simple.SimpleJdbcTemplate">
    <description>
    Scope: private
    </description>
    <constructor-arg ref="dataSource"/>
  </bean>
  
  <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
    <description>
    Scope: private
    </description>
    <property name="dataSource" ref="dataSource"/>
  </bean>
  
  <bean id="dataSource" lazy-init="true"
        class="org.springframework.jndi.JndiObjectFactoryBean">
    <description>
    Scope: private
    </description>
    <property name="jndiName" value="java:/omeroDS" />
  </bean>
  
</beans>
