<beans>	

  <bean name="internal:ome.api.ISession" class="ome.services.sessions.SessionBean">
    <description>
    Privileged bean which has several "private" references injected. This is not
    an example of what should be done.
    </description>
    <property name="localAdmin" ref="internal:ome.api.LocalAdmin"/>
    <property name="sessionManager" ref="sessionManager"/>
  </bean> 
 
  <bean name="managed:ome.api.ISession" parent="managedService">
    <property name="proxyInterfaces">
      <list>
        <value>ome.api.ISession</value>
      </list>
    </property>
    <property name="target" ref="internal:ome.api.ISession"/>
  </bean>  

  <bean name="sessionManager" class="ome.services.sessions.SessionManagerImpl">
    <property name="adminService"  ref="internal:ome.api.LocalAdmin"/>
    <property name="queryService"  ref="internal:ome.api.LocalQuery"/>
    <property name="updateService" ref="internal:ome.api.LocalUpdate"/>
    <property name="cache"         ref="sessionCache"/>
    <property name="roles"         ref="roles"/>
  </bean>  
  
  <bean id="readWriteCache" class="ome.tools.spring.ReadWriteCache">
     <constructor-arg ref="sessionCache"/>
  </bean>
  
  <bean id="sessionCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
    <property name="cacheManager" ref="CacheManager"/>
    <property name="overflowToDisk" value="false"/>
    <property name="maxElementsInMemory" value="0"/>
    <property name="timeToIdle" value="600"/>
    <property name="timeToLive" value="0"/>
  </bean>
  
</beans>
