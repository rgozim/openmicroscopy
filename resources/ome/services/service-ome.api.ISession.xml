<beans>	

  <bean name="internal:ome.api.ISession" class="ome.services.sessions.SessionBean">
    <description>
    Privileged bean which has several "private" references injected. This is not
    an example of what should be done.
    </description>
    <property name="sessionManager" ref="sessionManager"/>
  </bean> 
 
  <bean name="managed:ome.api.ISession" parent="selfManagingService">
    <property name="proxyInterfaces">
      <list>
        <value>ome.api.ISession</value>
      </list>
    </property>
    <property name="target" ref="internal:ome.api.ISession"/>
  </bean>  

  <bean name="sessionManager" class="ome.services.sessions.SessionManagerImpl"
    init-method="init"><!-- Init called to add root login method. -->
    <property name="sessionCache"  ref="sessionCache"/>
    <property name="roles"         ref="roles"/>
    <property name="executor"      ref="executor"/>
  </bean>  

  <bean name="sessionCache" class="ome.services.sessions.state.SessionCache">  
    <property name="cacheFactory"  ref="&amp;ehCache"/>
  </bean>

  <!--  sessionCache alters the instance given to it, and therefore this 
        is not a singleton. -->
  <bean id="ehCache" class="ome.services.sessions.state.CacheFactory" 
    singleton="false">
    <property name="cacheManager" ref="CacheManager"/>
    <property name="overflowToDisk" value="false"/>
    <property name="maxElementsInMemory" value="2000000"/>
    <property name="maxElementsOnDisk" value="0"/>
    <property name="timeToLive" value="0"/>
    <property name="timeToIdle" value="${omero.sessions.timeout}"/>
  </bean>

  <bean id="updateCache" class="ome.services.sessions.state.UpdateCacheThread">
    <constructor-arg ref="sessionManager"/>
    <constructor-arg ref="executor"/>
    <constructor-arg ref="sessionCache"/>
  </bean>

  <bean id="update-cache-manual" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
    <property name="targetObject" ref="updateCache" />
    <property name="targetMethod" value="run" />
  </bean>

</beans>
