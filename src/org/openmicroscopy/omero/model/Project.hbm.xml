<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="org.openmicroscopy.omero.model.Project" 
    table="projects"
>

    <id
        name="projectId"
        type="java.lang.Integer"
        column="project_id"
    >
        <generator class="assigned" />
    </id>

    <property
        name="view"
        type="java.lang.String"
        column="view"
        length="64"
    />
    <property
        name="name"
        type="java.lang.String"
        column="name"
        not-null="true"
        length="64"
    />
    <property
        name="description"
        type="java.lang.String"
        column="description"
        length="-1"
    />

    <!-- Associations -->
  
    <!-- bi-directional many-to-one association to Group -->
    <many-to-one
        name="group"
        class="org.openmicroscopy.omero.model.Group"
        not-null="true"
    >
        <column name="group_id" />
    </many-to-one>
    <!-- bi-directional many-to-one association to Experimenter -->
    <many-to-one
        name="experimenter"
        class="org.openmicroscopy.omero.model.Experimenter"
        not-null="true"
    >
        <column name="owner_id" />
    </many-to-one>
    <!-- bi-directional many-to-many association to Dataset -->
    <set
        name="datasets"
        lazy="true"
		cascade="all"
        table="project_dataset_map"
    >
        <key>
            <column name="project_id" />
        </key>
        <many-to-many
            class="org.openmicroscopy.omero.model.Dataset"
        >
            <column name="dataset_id" />
        </many-to-many>
    </set>

</class>
</hibernate-mapping>
