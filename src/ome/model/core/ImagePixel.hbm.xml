<class 
    name="ome.model.core.ImagePixel" 
    table="image_pixel"
>
    <meta attribute="class-description" inherit="false">
       @hibernate.class
        table="image_pixel"
    </meta>
    <meta attribute="implement-equals" inherit="false">true</meta>

    <id
        name="id"
        type="java.lang.Integer"
        column="image_pixel_id"
    >
        <meta attribute="field-description">
           @hibernate.id
            generator-class="sequence"
            type="java.lang.Integer"
            column="image_pixel_id"

           @hibernate.generator-param
	        name="sequence"
	        value="image_pixel_seq"
        </meta>
        <generator class="sequence">
            <param name="sequence">image_pixel_seq</param>
        </generator>
    </id>

<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	 COMMON
     ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <version
        name="version"
        type="java.lang.Integer"
        column="version"
        unsaved-value="negative"
    >
        <meta attribute="field-description">
           @hibernate.version
            column="version"
            unsaved-value="negative"
        </meta>
    </version>

    <component name="permissions"
		class="ome.model.internal.Permissions">
		<property name="bytes" type="binary" column="permissions"/>
    </component>
    <many-to-one name="owner" class="ome.model.meta.Experimenter" not-null="true" cascade="save-update"/>
    <many-to-one name="creationEvent" class="ome.model.meta.Event" not-null="true" cascade="save-update"/>		
    <many-to-one name="updateEvent" class="ome.model.meta.Event" not-null="false"/>	
	
